{
  "name": "AI Email Writer",
  "description": "AI-Powered email reply generator",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "storage"],

  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "*://mail.google.com/*"
  ],

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://mail.google.com/*"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Email Writer Assistant"
  }
}
